---
interface AuthorType {
	id: string;
	name: string;
}
interface PostDataType {
	_id: string;
	author: AuthorType;
	title: string;
	body:string;
	published: boolean;
	timestamp: string;
}
interface Props {
	data: PostDataType
}

const { data } = Astro.props;
---

<li class="p-10">
	<a href={`/post/${data._id}`}>
		<h2 class="text-2xl hover:underline font-bold mb-5">
			{data.title}
		</h2>
	</a>
	<section class="line-clamp-5 font-georgia text-sm">
		<Fragment set:html={data.body}>	
	</section>
</li>
